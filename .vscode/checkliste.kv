#:kivy 1.11.0

<ChecklistScreen>:
    name: 'checkliste'
    BoxLayout:
        orientation: 'vertical'
        spacing: 30  # Mehr Abstand zwischen den Boxen
        padding: [50, 50, 50, 50]

        canvas.before:
            Color:
                rgba: 173/255, 223/255, 173/255, 1  # Moosgrün
            Rectangle:
                pos: self.pos
                size: self.size

        # Platzhalter-Widget für die obere Leiste
        Widget:
            size_hint_y: None
            height: 20

        Label:
            text: 'Checkliste'
            font_size: 48
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1  # Schwarze Textfarbe
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            

        # Platzhalter-Widget für Abstand
        #Widget:
        #    size_hint_y: None
        #    height: 20

        ScrollView:
            size_hint: (1, None)
            height: 500  # Feste Höhe für die ScrollView

            GridLayout:
                id: checkbox_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10  # Abstand zwischen den Checkboxen

                # Initialer Inhalt
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50
                    spacing: 10
                    Label:
                        text: "Stützen eingefahren"
                        font_size: 32
                        color: 0, 0, 0, 1 # Schwarze Textfarbe
                    CheckBox:

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50
                    spacing: 10
                    Label:
                        text: "Markise"
                        font_size: 32
                        color: 0, 0, 0, 1 # Schwarze Textfarbe 
                    CheckBox:

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50
                    spacing: 10
                    Label:
                        text: "Stufen eingefahren"
                        font_size: 32
                        color: 0, 0, 0, 1 # Schwarze Textfarbe 
                    CheckBox:

        Button:
            text: "Hinzufügen"
            size_hint_y: None
            height: 50
            on_release: app.show_popup(checkbox_list)

        Widget:
            size_hint_y: None
            height: 20
            color: 0, 0, 0, 1 # Schwarze Textfarbe 
            spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            spacing: 30  # Mehr Abstand zwischen den Buttons
            size_hint_y: None
            height: 60
            pos_hint: {"bottom": 1}  # Sorgt dafür, dass das BoxLayout am unteren Rand bleibt

            Button:
                text: 'Zurück'
                font_size: 32
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

            Button:
                text: 'Speichern'
                font_size: 32
                size_hint: (0.5, None)
                height: 50
                on_press: root.speichern_in_db(checkbox_list)
