#:kivy 1.11.0
<ChecklistScreen>:
    name: 'checkliste'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 30  # Mehr Abstand zwischen den Boxen

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige Hintergrundfarbe
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Checkliste'
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1  # Schwarze Textfarbe

        CustomScrollView:
            BoxLayout:
                orientation: 'vertical'
                padding: [0, 30, 0, 30]  # Mehr Padding oben und unten
                spacing: 20  # Abstand zwischen den Checkboxen
                size_hint_y: None
                height: self.minimum_height

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 15  # Abstand zwischen Text und Checkbox
                    Label:
                        text: 'Stützen eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_stuetze

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 15
                    Label:
                        text: 'Markise eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_markise

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 15
                    Label:
                        text: 'Trittstufe eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_trittstufe

            BoxLayout:
                orientation: 'horizontal'
                spacing: 30  # Mehr Abstand zwischen den Buttons
                size_hint_y: None
                height: 60

                Button:
                    text: 'Zurück'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: app.root.current = 'main'

                Button:
                    text: 'Speichern'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: root.speichern_in_db(checkbox_list)
