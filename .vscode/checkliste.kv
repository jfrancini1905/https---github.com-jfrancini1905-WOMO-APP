#:kivy 1.11.0
<ChecklistScreen>:
    name: 'checkliste'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Checkliste'
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]

        CustomScrollView:
            BoxLayout:
                orientation: 'vertical'
                padding: [0, 50, 0, 50]
                spacing: 20
                size_hint_y: None
                height: self.minimum_height

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    Label:
                        text: 'Stützen eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_stuetze

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    Label:
                        text: 'Markise eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_markise

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    Label:
                        text: 'Trittstufe eingefahren'
                        font_size: 24
                        color: 0, 0, 0, 1  # Schwarze Textfarbe
                    CheckBox:
                        id: checkbox_trittstufe

            BoxLayout:
                orientation: 'horizontal'
                spacing: 20
                height: self.minimum_height

                Button:
                    text: 'Zurück'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: app.root.current = 'main'

                Button:
                    text: 'Speichern'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: root.speichern_in_db(checkbox_list)

