#:kivy 1.11.0
<MyScreenManager>:
    StartScreen:
    MainScreen:
    StellplatzScreen:
    ChecklistScreen:
    VerwaltungsScreen:
    StellplatzverwaltungScreen:
    CameraScreen:

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 100, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Willkommen in der WoMo-App!'
            font_size: 32
            color: 0, 0, 0, 1  # Schwarze Textfarbe
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: None
            height: self.texture_size[1]

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'WoMo-App'
            font_size: 48
            color: 0, 0, 0, 1 # Schwarze Textfarbe
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.5)
            spacing: 20
            padding: [0, 50, 0, 50]

            Button:
                text: 'Stellplatz'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'stellplatz'

            Button:
                text: 'Checkliste'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'checkliste'

            Button:
                text: 'Verwaltung'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'verwaltung'

        Widget:
            size_hint_y: None
            height: 50

<StellplatzScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Stellplatz Details'
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: Bezeichnung
            hint_text: 'Bezeichnung'
            font_size: 24
            size_hint_y: None
            height: 40

        TextInput:
            id: GPS-Koordinaten
            hint_text: 'GPS-Koordinaten'
            font_size: 24
            size_hint_y: None
            height: 40

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200

            Button:
                text: 'Kamera'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'camera'  # Wechsel zum CameraScreen

            Label:
                text: 'Bilder hinzufügen'
                font_size: 24

            Button:
                text: 'Bild auswählen'
                font_size: 24
                size_hint_y: None
                height: 50

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        ScrollView:
            size_hint: (2, None)
            height: 300

            GridLayout:
                id: checkbox_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                # Initiale Optionen
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: checkbox_toilette
                    Label:
                        text: 'Toilette'
                        font_size: 24

                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: checkbox_dusche
                    Label:
                        text: 'Dusche'
                        font_size: 24

                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: checkbox_entsorgung
                    Label:
                        text: 'Entsorgung'
                        font_size: 24

                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: checkbox_frischwasser
                    Label:
                        text: 'Frischwasser'
                        font_size: 24

            Button:
                text: "Mehr Optionen anzeigen"
                size_hint_y: None
                height: 50
                on_release:
                    app.add_more_options(checkbox_list)


        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Zurück'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

            Button:
                text: 'Speichern'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: root.speichern_in_db()

<VerwaltungsScreen>:
    name: 'verwaltung'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200

            Button:
                text: 'XML-Export'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'export'

            Button:
                text: 'Listen Verwalten'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'editList'

            Button:
                text: 'Stellplatzeinträge'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'Stellplatzeinträge'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Zurück'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

<StellplatzverwaltungScreen>:
    name: 'Stellplatzeinträge'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        # Weitere Widgets hier hinzufügen

<CameraScreen>:
    name: 'camera'
