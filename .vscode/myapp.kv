#:kivy 1.11.0

<MyScreenManager>:
    StartScreen:
    MainScreen:
    StellplatzScreen:
    ChecklistScreen:
    VerwaltungsScreen:
    StellplatzverwaltungScreen:
    CameraScreen:

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 100, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 173/255, 223/255, 173/255, 1  # Moosgrün
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Willkommen in der WoMo-App!'
            font_size: 48
            color: 0, 0, 0, 1  # Schwarze Textfarbe
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 20

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 173/255, 223/255, 173/255, 1  # Moosgrün
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'WoMo-App'
            font_size: 48
            color: 0, 0, 0, 1  # Schwarze Textfarbe
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.5)
            spacing: 20
            padding: [0, 50, 0, 50]

            Button:
                text: 'Stellplatz'
                font_size: 32
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'stellplatz'

            Button:
                text: 'Checkliste'
                font_size: 32
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'checkliste'

            Button:
                text: 'Verwaltung'
                font_size: 32
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'verwaltung'

        Widget:
            size_hint_y: None
            height: 50

