<MyScreenManager>:
    StartScreen:
    MainScreen:
    StellplatzScreen:
    ChecklistScreen:
    VerwaltungsScreen:
    StellplatzverwaltungScreen:

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 100, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Willkommen in der WoMo-App!'
            font_size: 32
            color: 0, 0, 0, 1  # Schwarze Textfarbe
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            size_hint_y: None
            height: self.texture_size[1]

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'WoMo-App'
            font_size: 48
            color: 0, 0, 0, 1 # Schwarze Textfarbe
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.5)
            spacing: 20
            padding: [0, 50, 0, 50]

            Button:
                text: 'Stellplatz'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'stellplatz'
            
            Button:
                text: 'Checkliste'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'checkliste'

            Button:
                text: 'Verwaltung'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'verwaltung'

        Widget:
            size_hint_y: None
            height: 50

<StellplatzScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Stellplatz Details'
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            hint_text: 'Bezeichnung'
            font_size: 24
            size_hint_y: None
            height: 40

        TextInput:
            hint_text: 'GPS-Koordinaten'
            font_size: 24
            size_hint_y: None
            height: 40

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200

           # Camera:
            #    id: Camera
             #   resolution: 399, 299

            #BoxLayout:
             #   orientation: 'horizontal'
              #  size_hint_y: Noneheight: '48dp'

            
            
            Label:
                text: 'Bilder hinzufügen'
                font_size: 24

            Button:
                text: 'Bild auswählen'
                font_size: 24
                size_hint_y: None
                height: 50

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            BoxLayout:
                orientation: 'horizontal'

                CheckBox:
                    id: checkbox_toilette
                Label:
                    text: 'Toilette'
                    font_size: 24

            BoxLayout:
                orientation: 'horizontal'

                CheckBox:
                    id: checkbox_dusche
                Label:
                    text: 'Dusche'
                    font_size: 24

            BoxLayout:
                orientation: 'horizontal'

                CheckBox:
                    id: checkbox_entsorgung
                Label:
                    text: 'Entsorgung'
                    font_size: 24

            BoxLayout:
                orientation: 'horizontal'

                CheckBox:
                    id: checkbox_frischwasser
                Label:
                    text: 'Frischwasser'
                    font_size: 24

        BoxLayout:
            size_hint_y: None
            height: 50

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Zurück'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

            Button:
                text: 'Speichern'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: root.speichern_in_db(Bezeichnung.content,)

<VerwaltungsScreen>:
    name: 'verwaltung'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200

            Button:
                text: 'XML-Export'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'export'

            Button:
                text: 'Listen Verwalten'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'editList'

            Button:
                text: 'Stellplatzeinträge'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'Stellplatzeinträge'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Zurück'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

<StellplatzverwaltungScreen>:
    name: 'Stellplatzeinträge'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

