#:kivy 1.11.0

ScreenManager:
    CameraScreen:
    StellplatzScreen:

<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 0.5)
        spacing: 20
        padding: [0, 50, 0, 50]
        height: self.minimum_height

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        CustomScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Button:
                    text: 'zur√ºck'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: root.go_back_to_stellplatz  # Ruft die Methode zum Wechseln des Bildschirms auf
