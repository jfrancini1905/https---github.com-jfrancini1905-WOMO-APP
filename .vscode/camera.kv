#:kivy 1.11.0
<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 0.5)
        spacing: 20
        padding: [0, 50, 0, 50]
        height: self.minimum_height

        canvas.before:
            Color:
                rgba: 245/255, 245/255, 220/255, 1  # Beige
            Rectangle:
                pos: self.pos
                size: self.size

        # ScrollView wird hier verwendet, falls zukünftige Widgets hinzugefügt werden
        CustomScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                Button:
                    text: 'zurück'
                    font_size: 24
                    size_hint_y: None
                    height: 50
                    on_press: app.root.current = 'stellplatz'

