<MyScreenManager>:
    StartScreen:
    MainScreen:
    StellplatzScreen:
    VerwaltungsScreen:
    StellplatzverwaltungScreen:

<StartScreen>:
    name: 'start'
    BoxLayout:
        orientation: 'vertical'
        # Weitere Widgets hier hinzufügen

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        # Weitere Widgets hier hinzufügen

<StellplatzScreen>:
    name: 'stellplatz'
    BoxLayout:
        orientation: 'vertical'
        # Weitere Widgets hier hinzufügen

<VerwaltungsScreen>:
    name: 'verwaltung'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 0, 0, 1, 1  # Blau
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200

            Button:
                text: 'XML-Export'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'export'

            Button:
                text: 'Listen Verwalten'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'editList'

            Button:
                text: 'Stellplatzeinträge'
                font_size: 24
                size_hint_y: None
                height: 50
                on_press: app.root.current = 'Stellplatzeinträge'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Zurück'
                font_size: 24
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'

<StellplatzverwaltungScreen>:
    name: 'Stellplatzeinträge'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20

        canvas.before:
            Color:
                rgba: 0, 0, 1, 1  # Blau
            Rectangle:
                pos: self.pos
                size: self.size
        # Weitere Widgets hier hinzufügen



            
        
