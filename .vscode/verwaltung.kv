#:kivy 1.11.0

<VerwaltungsScreen>:
    name: 'verwaltung'
    canvas.before:
        Color:
            rgba: 173/255, 223/255, 173/255, 1  # Moosgrün
        Rectangle:
            pos: self.pos
            size: self.size
    
    CustomScrollView:
        BoxLayout:
            orientation: 'vertical'
            padding: [50, 50, 50, 50]
            spacing: 20
            size_hint_y: None
            height: self.minimum_height

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 30
                
                Button:
                    text: 'XML-Export'
                    font_size: 32
                    size_hint_y: None
                    height: 50
                    on_press: app.root.current = 'export'

                Button:
                    text: 'Stellplatzübersicht'
                    font_size: 32
                    size_hint_y: None
                    height: 50
                    on_press: app.root.current = 'uebersicht'

            Widget:
                size_hint_y: None
                height: 20

            BoxLayout:
                orientation: 'horizontal'
                spacing: 20
                size_hint_y: None
                height: 50
                pos_hint: {"bottom": 1}  # Sorgt dafür, dass das BoxLayout am unteren Rand bleibt

                Button:
                    text: 'Zurück'
                    font_size: 32
                    size_hint: (0.5, None)
                    height: 50
                    on_press: app.root.current = 'main'


<StellplatzverwaltungScreen>:
    name: 'Stellplatzeinträge'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 20
        
        canvas.before:
            Color:
                rgba: 173/255, 223/255, 173/255, 1  # Moosgrün
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: None
            height: 50
            pos_hint: {"bottom": 1}  # Sorgt dafür, dass das BoxLayout am unteren Rand bleibt

            Button:
                text: 'Zurück'
                font_size: 32
                size_hint: (0.5, None)
                height: 50
                on_press: app.root.current = 'main'
       
